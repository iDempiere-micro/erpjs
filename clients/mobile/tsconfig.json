{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "ES2017",
            "es2017"
        ],
        "types": [
            "svelte"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "removeComments": false
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}